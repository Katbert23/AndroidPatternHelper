
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/launcherbackground">

            <TextView
                android:id="@+id/solidDescription"
                android:textSize="16sp"
                android:background="@drawable/backgroundsolid"

                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:maxLines="20"
                android:scrollbars = "vertical"

                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/antiSolidDescription"
            android:textSize="16sp"
            android:background="@drawable/backgroundantisolid"

            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:maxLines="20"
            android:scrollbars = "vertical"

            android:layout_below="@+id/solidDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
